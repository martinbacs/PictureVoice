<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.MainActivity"

    >


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/twprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/profiletext"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="@string/picturevoice"
                    android:textColor="@color/black"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="@string/texttospeech"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:text="@string/pointone"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/selectpic"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="654dp" />

                        <Button
                            android:id="@+id/btnnew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/newpic"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="654dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-thin"
                            android:text="@string/pointtwo"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnConvertText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/cnvtotext"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="654dp" />

                        <Button
                            android:id="@+id/btnDisplayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/displaytxt"
                            tools:layout_editor_absoluteX="157dp"
                            tools:layout_editor_absoluteY="667dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="@string/pointthree"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btnConvertAudio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/cnvtoaudio"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="654dp" />

                        <Button
                            android:id="@+id/btnplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/playpause"
                            tools:layout_editor_absoluteX="157dp"
                            tools:layout_editor_absoluteY="667dp" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageViewPic"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/imgPic"
                            app:srcCompat="@drawable/cam" />

                        <ImageView
                            android:id="@+id/imageViewTxt"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/imgTxt"
                            app:srcCompat="@drawable/text" />

                        <ImageView
                            android:id="@+id/imageViewMp"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/imgAudio"
                            app:srcCompat="@drawable/mp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxPic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uploadpic" />

                        <CheckBox
                            android:id="@+id/checkBoxTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/uploadtxt" />

                        <CheckBox
                            android:id="@+id/checkBoxMp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uploadaudio" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/btnupload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/roundedbutton"
                            android:text="@string/upload"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="654dp" />

                    </TableRow>
                </TableLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/imgSamplePic"
                    app:srcCompat="@drawable/filesearch" />

                <TextView
                    android:id="@+id/twresult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/roundedtextview"
                    android:text="@string/twtext"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="29dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>